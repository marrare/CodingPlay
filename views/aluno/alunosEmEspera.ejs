<!doctype html>
<html lang="pt-br">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="icon" href="img/favicon.icon" type="image/png">
	<title>Coding Play</title>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/vendors/linericon/style.css"> <!-- Icones -->
	<link rel="stylesheet" href="/css/font-awesome.min.css"> <!-- Icones -->
	<link rel="stylesheet" href="/vendors/owl-carousel/owl.carousel.min.css">
	<link rel="stylesheet" href="/css/magnific-popup.css"> <!-- Popup de video ou fotos -->
	<link rel="stylesheet" href="/vendors/nice-select/css/nice-select.css"> <!-- Selecionar select -->
	<link rel="stylesheet" href="/vendors/animate-css/animate.css">
	<link rel="stylesheet" href="/vendors/flaticon/flaticon.css"> <!-- Icones -->
	<!-- main css -->
    <link rel="stylesheet" href="/css/sweetalert2.min.css">
	<link rel="stylesheet" href="/css/style.css">
    <style>
        .table th:first-child{
            text-align:center;
        }
        .table td:first-child{
            text-align:center;
        }
        .botao_style_enviar {
            text-align:center;
        }
    </style>
</head>
    
<body>
    
    <!--=============== Seleção do tipo de navegador de acordo com usuário logado ====================-->
    <% if(session.tipo == 'aluno' && session.usuario != 'undefined') { %>
            <%- include ../aluno/comum/header %>
    <% } else if(session.tipo == 'professor' && session.usuario != 'undefined') { %>
            <%- include ../professor/comum/header %>
    <% } else { %>
            <%- include ../headerOff %>
    <% } %>
    <!--=============== END - Seleção do tipo de navegador de acordo com usuário logado ================-->
    
    
    
    <section class="upcoming_games_area" id="areaProblema">
        <div class="container">
            <form action="/aluno/activeConfirm" method="post">
                <div class="row">
                    <table class="table table-striped ">
                        <thead>
                            <tr class="list_problemas">
                                <th style="width: 2%;"></th>
                                <th style="width: 15%;">Nome</th>
                                <th style="width: 15%;">Matrícula</th>
                                <th style="width: 22%;">Email</th>
                            </tr>
                        </thead>
                        <tbody id="tabelaListaProduto">

                                <% for(var i = 0; i < alunos.length; i++) { %>
                                    <tr class="list_problemas">
                                        <td class="seleCampo"><input type="checkbox" name="<%=alunos[i].id%>" value="<%=alunos[i].id%>"></td>
                                        <td data-problema="<%=alunos[i].nome%>" class="seleCampo"><%=alunos[i].nome%></td>
                                        <td data-matricula="<%=alunos[i].matricula%>" class="seleCampo"><%=alunos[i].matricula%></td>
                                        <td data-professor="<%=alunos[i].email%>" class="seleCampo"><%=alunos[i].email%></td>
                                    </tr>
                                <% } %>

                        </tbody>
                    </table>
                </div>

                <div class="button-group-area botao_style_enviar">
                    <input type="submit" class="genric-btn info-border circle arrow" value="Ativar conta de alunos">
                </div>
            </form>
            
        </div>
    </section>
    
    
    
    <% include ../comum/footer %>
    
    <!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="/js/jquery-3.2.1.min.js"></script>
	<script src="/js/popper.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/stellar.js"></script>
	<script src="/js/jquery.magnific-popup.min.js"></script> <!-- Popups -->
	<script src="/vendors/nice-select/js/jquery.nice-select.min.js"></script> <!-- Selecionar select -->
	<script src="/vendors/isotope/imagesloaded.pkgd.min.js"></script> <!-- Adicionar imagens aleatórias -->
	<script src="/vendors/isotope/isotope-min.js"></script>
	<script src="/vendors/owl-carousel/owl.carousel.min.js"></script>
	<script src="/js/jquery.ajaxchimp.min.js"></script>
	<script src="/vendors/counter-up/jquery.waypoints.min.js"></script> <!-- Acompanha tela e realiza eventos dependendo do que se vê na tela -->
	<script src="/vendors/counter-up/jquery.counterup.min.js"></script>
	<script src="/js/mail-script.js"></script>
    <script src="js/theme.js"></script>
    
    <!-- JS adicionais -->
    <script src="/js/sweetalert2.min.js"></script>
    <script src="/js/footer.js"></script>
    <script src="/js/alerts.js"></script>
    <!--========================= Menssagem Usuario criado com sucesso ============================-->
        <% if(typeof alunosAtivados != 'undefined') { %>
            <script>
                alunoAtivadoComSucesso();
            </script>
        <% } %>
    <!--========================= END - Menssagem Usuario criado com sucesso ============================-->
</body>

</html>